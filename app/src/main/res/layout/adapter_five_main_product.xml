<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/four"
    android:layout_marginLeft="@dimen/two"
    android:layout_marginRight="@dimen/two"
    android:layout_marginTop="@dimen/four"
    android:background="#FFFFFF"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/shadow"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_item_image"
                android:layout_width="@dimen/onefourfive"
                android:layout_height="@dimen/onefourfive"
                android:layout_marginLeft="@dimen/_2ssp"
                android:layout_marginRight="@dimen/_2ssp"
                android:adjustViewBounds="true"
                android:src="@drawable/south" />

            <View
                android:layout_width="@dimen/onefourfive"
                android:layout_height="@dimen/one"
                android:background="#000000"></View>

            <TextView
                android:id="@+id/tv_item_name"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/threezero"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/five"
                android:layout_marginTop="@dimen/five"
                android:text="South"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>