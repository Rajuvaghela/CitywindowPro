<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/five">


    <LinearLayout
        android:layout_width="@dimen/onefivezero"
        android:layout_height="@dimen/oneninezero"
        android:background="@drawable/border_full"
        android:orientation="vertical"
        android:padding="2dp">

        <ImageView
            android:id="@+id/iv_item_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/onefivezero"
            android:layout_gravity="center"
            android:scaleType="fitXY" />


        <TextView
            android:id="@+id/tv_item_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/threezero"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="name"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#000000"
            android:textSize="@dimen/onezero" />
    </LinearLayout>


</RelativeLayout>