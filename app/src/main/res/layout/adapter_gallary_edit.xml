<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/onetwozero"
        android:layout_margin="@dimen/five"
        android:background="@drawable/border_full"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_profile_image"
            android:layout_width="@dimen/onetwozero"
            android:layout_height="@dimen/onetwozero"
            android:background="@drawable/border_edittext"
            android:padding="@dimen/five"
            android:scaleType="fitXY"
            android:src="@drawable/fb_logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_company_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/onezero"
                    android:padding="@dimen/five"
                    android:text=""
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/onezero"
                    android:padding="@dimen/five"
                    android:text="" />

                <TextView
                    android:id="@+id/tv_delete_product"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/threezero"
                    android:layout_margin="@dimen/five"
                    android:layout_marginLeft="@dimen/five"
                    android:layout_marginRight="@dimen/five"
                    android:layout_marginTop="@dimen/onefive"
                    android:background="@drawable/border_edittext"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="Delete" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>