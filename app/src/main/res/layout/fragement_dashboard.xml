<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D4D4D4"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v4.view.ViewPager
                    android:id="@+id/intro_images"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/onefourzero"
                    android:fitsSystemWindows="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />

                <com.viewpagerindicator.CirclePageIndicator
                    android:id="@+id/indicator"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/onefive"
                    android:layout_below="@+id/intro_images"
                    android:layout_marginTop="@dimen/five"
                    app:fillColor="#000000"
                    app:pageColor="#ff0000"
                    app:radius="@dimen/five" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/one"
            android:layout_weight="1"
            android:background="#D4D4D4"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_yummyfoods"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/four"
                    android:layout_marginLeft="@dimen/two"
                    android:layout_marginRight="@dimen/two"
                    android:layout_marginTop="@dimen/four"
                    android:layout_weight="1"
                    android:background="@drawable/shadow"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_yummyfoods"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingTop="@dimen/eight"
                        android:src="@drawable/restauranty"
                        app:civ_border_color="#cc3333"
                        app:civ_border_width="2dp" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/fourzero"
                        android:gravity="center"
                        android:padding="@dimen/five"
                        android:text="YUMMY FOODS"
                        android:textColor="@color/white"
                        android:textSize="@dimen/onetwo" />
                </LinearLayout>

                <LinearLayout
