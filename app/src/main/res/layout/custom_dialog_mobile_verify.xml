<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"

        android:background="#ffffff"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_mobile_number_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/button_bg"
            android:gravity="center"
            android:padding="@dimen/onezero"
            android:textColor="#ffffff"
            android:paddingLeft="@dimen/onezero"
            android:text="Forgot password ?"
            android:textSize="@dimen/onefive" />

        <EditText
            android:id="@+id/tv_message_email_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/onezero"
            android:layout_marginTop="@dimen/onezero"
            android:background="@drawable/border_edittext"
            android:hint="Email / username"
            android:padding="@dimen/onezero"
            android:textSize="16sp" />
        <EditText
            android:id="@+id/tv_dialog_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/onezero"
            android:layout_marginTop="@dimen/onezero"
            android:background="@drawable/border_edittext"
            android:hint="Password *"
            android:padding="@dimen/onezero"
            android:textSize="16sp" />
        <EditText
            android:id="@+id/tv_dialog_conform_pass"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/onezero"
            android:layout_marginTop="@dimen/onezero"
            android:background="@drawable/border_edittext"
            android:hint="Conform Password *"
            android:padding="@dimen/onezero"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/onezero"
            android:lineSpacingExtra="@dimen/three"
            android:padding="@dimen/onezero"
            android:text="Please verify your mobile number and click on Ok"
            android:textAlignment="center"
            android:textColor="#333333"
            android:textSize="16sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:background="@drawable/button_bg"
            android:text="OK"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_close"
        android:layout_width="@dimen/threezero"
        android:layout_height="@dimen/threezero"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/eight"
        android:layout_marginTop="@dimen/seven"
        android:background="@drawable/cancel"
        android:padding="@dimen/five"


        />


</RelativeLayout>
